{
  "extends": "../tslint.json",
  "rules": {
    "directive-selector": [
      true,
      "attribute",
      "app",
      "camelCase"
    ],
    "component-selector": [
      true,
      "element",
      "app",
      "kebab-case"
    ],
    "prefer-const": [
      true,
      {
        "destructuring": "any"
      }
    ],
    "no-trailing-whitespace": [
      true,
      "always"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": [
      true,
      "never"
    ],
    "quotemark": [
      true,
      "single"
    ]
  }
}

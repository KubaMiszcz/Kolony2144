pipeline {
	agent any

  stages {
    stage('Hello') {
      steps {
        echo 'Hello World'
      }
    }
    }
    stage('Checkout branch: devel') {
      steps {
        git branch: 'jenkins', url: 'https://github.com/KubaMiszcz/Kolony2144.git'
      }
    }
    stage('install node_modules') {
      steps {
        ws('"${env.WORKSPACE}"/Kolony2144.FrontAngular'){
          // sh 'cd "${WORKSPACE}"/Kolony2144.FrontAngular/ && npm install'
          sh 'npm install'
        }
      }
    }
    stage('Build') {
      steps {
        ws('"${env.WORKSPACE}"/Kolony2144.FrontAngular'){
          sh 'ng build --prod'
        }
      }
    }
  }
}

  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}",
      // "disableNetworkCache": true,
      // "sourceMaps": true,
      "timeout": 1000,
      // "trace": "verbose",
      // "userDataDir": false,
      // "targetTypes": [
      //   "page",
      //   "webview"
      // ],
      // "runtimeExecutable": "C:\\Program Files\\Vivaldi\\Application\\vivaldi.exe"
    },
    {
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      // "port": 4200,
      "webRoot": "${workspaceFolder}",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "port": 4200
    },
    {
      "name": "Attach to Vivaldi",
      "type": "chrome",
      "request": "attach",
      "urlFilter": "http://localhost:5000/*",
      "port": 4200,
      "webRoot": "${workspaceFolder}",
      "targetTypes": [
        "page",
        "webview"
      ]
    }
  ]
}
